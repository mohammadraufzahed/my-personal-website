<!-- Mobile Styles -->
<style lang="scss" scoped>
  @media only screen and (min-width: 0px) {
    .navbar {
      widows: 100vw;
      height: 30px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding-inline: 28px;
      animation: 800ms show ease-in;
      > .logo {
        width: max-content;
        height: max-content;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 8px;
        > div {
          width: 16px;
          height: 16px;
          background-color: black;
          border-radius: 50%;
        }
        > span {
          margin-top: 4px;
          font-weight: 700;
          font-size: 1.2rem;
        }
      }
      > .links {
        width: max-content;
        height: max-content;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        > a {
          font-weight: 700;
          font-size: 1.1rem;
          text-decoration: none;
          color: black;
          transition: 150ms ease-in;
          will-change: opacity;
          opacity: 1;
          &:hover {
            opacity: 0.5;
          }
        }
      }
    }

    @keyframes show {
      from {
        opacity: 0;
        transform: translateY(-4vh);
      }
      to {
        opacity: 1;
        transform: translateY(-0vh);
      }
    }
  }
  // Tablet
  @media only screen and (min-width: 768px) {
    .navbar {
      > .logo {
        > span {
          font-size: 1.5rem;
        }
      }
      > .links {
        > a {
          font-size: 1.2rem;
        }
      }
    }
  }
</style>
